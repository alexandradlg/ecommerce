                    <section class="slice bg-minimalist">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="swiper-js-container">
                                        <div class="swiper-container" data-swiper-items="1" data-swiper-space-between="0">
                                            <div class="swiper-wrapper pb-5">
                                                <div class="swiper-slide">
                                                    <%= image_tag @item.image%>
                                                </div>
                                                <div class="swiper-slide">
                                                    <img src="../../assets/images/prv/shop/accessories/img-sq-2.png" class="img-fluid">
                                                </div>
                                                <div class="swiper-slide">
                                                    <img src="../../assets/images/prv/shop/accessories/img-sq-3.png" class="img-fluid">
                                                </div>
                                            </div>
                                            <div class="swiper-pagination"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-5 ml-lg-auto">
                                    <div class="product-description-wrapper">
                                        <!-- Product title -->
                                        <h2 class="heading heading-4 strong-600 text-capitalize">
                                            <%= @item.title %>
                                        </h2>
                                        <span class="heading heading-light heading-5 strong-600 mt-3">
                                                â‚¬<%= @item.price %>
                                        </span>

                                        <span class="space-xs-md"></span>

                                        <div class="row">
                                            <div class="col-lg-8">
                                                <div class="form-default">
                                                     <div class="row mt-2">
                                                    </div>
                                                    <div class="row mt-2">
                                                        <div class="col-12">
                                                            <!-- Add to cart button -->
                                                            <% if user_signed_in? %>
                                                                <%= button_to "Ajouter au panier", cart_item_additem_path(@cart_id, @item.id), class:"btn btn-lg btn-block btn-gray-dark btn-icon-left" %>
                                                            <% else %>
                                                            <%= button_to "Sign up", new_user_registration_path, method: :get, class:"btn btn-lg btn-block btn-gray-dark btn-icon-left" %>
                                                            <% end %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Rating stars -->
                                        <div class="rating mt-2">
                                            <span class="star voted" rel="1"></span>
                                            <span class="star voted" rel="2"></span>
                                            <span class="star voted" rel="3"></span>
                                            <span class="star" rel="4"></span>
                                            <span class="star" rel="5"></span>

                                            <span class="rating-count">(2 customer reviews)</span>
                                        </div>

                                        <span class="space-xs-md"></span>

                                        <!-- Product description -->
                                        <div class="product-short-text">
                                            <p>
                                                    <%= @item.description %>
                                            </p>

                                            <ul class="inline-links inline-links--style-1 mt-4">
                                                <li>
                                                    <a href="#">Twitter</a>
                                                </li>
                                                <li>
                                                    <a href="#">Facebook</a>
                                                </li>
                                                <li>
                                                    <a href="#">Pinterest</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- <%= render  "items/related_products" %> -->

