                    <section class="slice-lg page-title bg-minimalist">
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <div class="text-center">
                                        <h3 class="heading heading-1 strong-400 text-capitalize mb-2">
                                            <span>Gallery</span>
                                        </h3>

                                        <ol class="breadcrumb breadcrumb--style-2 justify-content-center">
                                            <li class="breadcrumb-item">
                                                <%= link_to  "Home", root_path, class:"text-normal" %>
                                            </li>
                                        </ol>
                                    </div>

                                    <!-- Fluid text paragraph -->
                                    <div class="fluid-paragraph text-center mt-4">
                                        <p class="">
                                            Toutes les plus belles photos de chats, chatons et grands félins
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <section class="slice sct-color-1" id="sct_products">
                        <div class="container">
                            <div class="row-wrapper">
                                <div class="row cols-xs-space cols-sm-space cols-md-space">
                                    <% @items.each do |item| %>
                                    <div class="col-lg-3 col-md-6">
                                            <div class="block product no-radius">
                                                <div class="product-image">
                                                    <div class="view view-first">
                                                                <%=  link_to image_tag("images/prv/shop/accessories/img-2a.png"), show_item_path(Item.find(item.id).id) %>
                                                    </div>
    
                                                    <div class="product-actions--a product-actions--2" data-animation-in="slideInRight" data-animation-out="slideOutRight">
                                                        <button type="button" class="btn-product-action">
                                                            <i class="ion-bag"></i>
                                                        </button>
    
                                                        <button type="button" class="btn-product-action">
                                                            <i class="ion-ios-heart-outline"></i>
                                                        </button>
                                                    </div>
                                                </div>
    
                                                <div class="block-body px-0">
                                                    <h3 class="heading heading-6 strong-500 text-capitalize mb-0"><%= Item.find(item.id).title %></h3>
                                                    <span class="star-rating star-rating-sm">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star-o"></i>
                                                        <i class="fa fa-star-o"></i>
                                                    </span>
                                                    <div class="price-wrapper">
                                                        <span class="price heading-6 c-gray-light strong-400">€<span class="price-value"><%= Item.find(item.id).price %></span></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>
                        </div>
                    </section>