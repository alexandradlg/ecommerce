<!-- MAIN WRAPPER -->
<div class="body-wrap">
    <div id="st-container" class="st-container">
        <!-- Header -->
 

        <section class="slice-lg has-bg-cover bg-size-cover" style="background-image: url(../../assets/images/backgrounds/slider/img-45.jpg); background-position: bottom center;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-title">
                                <h5 class="heading heading-5 strong-500">
                                    Sign in to your account
                                </h5>
                            </div>
                            <div class="card-body">
                              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:'form-default'}) do |f| %>
                               
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                               

    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control form-control-lg' %>
  
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group has-feedback">
                                                  <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", class:'form-control form-control-lg' %>
                                                
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="checkbox">
                                               <% if devise_mapping.rememberable? -%>
   
      <%= f.check_box :remember_me, id:'chkRemember' %>
      <%= f.label :remember_me %>
    
  <% end -%>
                                                
                                            </div>
                                        </div>
                                    </div>

    <%= f.submit "Log in", class:'btn btn-styled btn-lg btn-block btn-base-1 mt-4' %>
  
<% end %>

<%= render "devise/shared/links" %>
                                
                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div><!-- END: body-wrap -->
